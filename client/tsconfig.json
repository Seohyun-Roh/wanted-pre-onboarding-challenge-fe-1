{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src", ".d.ts"],
  "exclude": ["./node_modules"]
}
